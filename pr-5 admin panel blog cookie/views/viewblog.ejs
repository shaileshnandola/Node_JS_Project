<%- include('header') %>

    <style>
        .card {
            border: 1px solid #ddd;
            border-radius: 6px;
            box-shadow: 0 2px 5px rgb(0 0 0 / 0.1);
            display: flex;
            flex-direction: column;
            background: white;
        }

        .card-img-top {
            width: 100%;
            border-top-left-radius: 6px;
            border-top-right-radius: 6px;
        }

        .card-body {
            padding: 1rem;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .card-title {
            font-size: 1.25rem;
            margin-bottom: 0.25rem;
        }

        .card-subtitle {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 0.75rem;
        }

        .card-text {
            flex-grow: 1;
            font-size: 1rem;
            color: #333;
            margin-bottom: 1rem;
        }

        .btn {
            padding: 0.35rem 0.75rem;
            font-size: 0.875rem;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            color: white;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-warning {
            background-color: #ffc107;
            border: none;
            color: black;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }
    </style>

    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">View Blogs</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">View Blogs</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">

                <% blogList.forEach((blog)=> { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="/uploads/<%= blog.image %>" alt="Blog Image" class="card-img-top"
                                style="height: 200px; object-fit: cover; border-radius: 5px 5px 0 0;"
                                onerror="this.onerror=null;this.src='/images/default.jpg';" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <%= blog.title %>
                                </h5>
                                <p class="card-subtitle mb-2 text-muted">By <%= blog.author %>
                                </p>
                                <p class="card-text">
                                    <% if(blog.content) { %>
                                        <%= blog.content.length> 120 ? blog.content.substring(0, 120) + '...' :
                                            blog.content %>
                                            <% } else { %>
                                                <em>No content available.</em>
                                                <% } %>
                                </p>
                                <div class="mt-auto">
                                    <a href="/admin/blogview/<%= blog._id %>"
                                        class="btn btn-primary btn-sm me-2">View</a>
                                    <a href="/admin/editBlog/<%= blog._id %>"
                                        class="btn btn-warning btn-sm me-2">Edit</a>
                                    <a href="/admin/deleteBlog/<%= blog._id %>"
                                         class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>

            </div>
        </div>
    </div>

    <%- include('footer') %>